{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 160,
  "trailingComma": "all",
  "bracketSpacing": true,
  "useTabs": false,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "strict",
  "overrides": [
    {
      "files": ["**/*.scss", "**/*.html"],
      "options": {
        "bracketSpacing": false,
        "singleQuote": false
      }
    },
    {
      "files": ["**/*.vue"],
      "options": {
        "vueIndentScriptAndStyle": true,
        "arrowParens": "avoid"
      }
    }
  ]
}
